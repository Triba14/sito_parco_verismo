# =============================================================================
# .env.example - Variabili d'Ambiente Django
# =============================================================================
# ISTRUZIONI:
# 1. Copia questo file: cp .env.example .env
# 2. Modifica i valori nel file .env
# 3. NON committare il file .env su Git
# =============================================================================

# --- DJANGO CORE (Obbligatori) ---

# Secret Key - Generala con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-CHANGE-THIS

# Debug (True=sviluppo, False=produzione)
DEBUG=True

# Host consentiti (separati da virgola)
ALLOWED_HOSTS=localhost,127.0.0.1


# --- DATABASE (Opzionale - SQLite è default) ---

# PostgreSQL per produzione (decommenta se necessario)
# DB_NAME=nome_database
# DB_USER=utente
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=5432


# --- FILES ---

STATIC_URL=/static/
STATIC_ROOT=staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=media/


# --- SECURITY (Produzione) ---

# Abilita redirect HTTPS (solo in produzione)
SECURE_SSL_REDIRECT=False


# --- CACHE ---

# Cache locale (default) - nessuna configurazione richiesta
# Per production cache (Redis/Memcached), aggiungi qui le configurazioni


# --- EMAIL (Opzionale) ---

# Console per sviluppo
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP per produzione (decommenta se necessario)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tua-email@gmail.com
# EMAIL_HOST_PASSWORD=tua-password
# DEFAULT_FROM_EMAIL=Parco Verismo <noreply@parcoverismo.it>

# --- GOOGLE ANALYTICS ---

# Measurement ID di Google Analytics GA4
# Il cliente deve:
# 1. Creare un account su https://analytics.google.com/
# 2. Creare una nuova proprietà GA4
# 3. Copiare il Measurement ID (formato: G-XXXXXXXXXX)
GA_MEASUREMENT_ID=
